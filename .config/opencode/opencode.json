{
  "$schema": "https://opencode.ai/config.json",
  "theme": "solarized",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    }
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen3-coder": {
          "tool_call": true
        },
        "gpt-oss": {
          "tool_call": true,
          "reasoning": true
        }
      }
    }
  },
  "agent": {
    "explore": {
      "tools": {
        "read": true,
        "glob": true,
        "grep": true,
        "list": true,
        "bash": true
      },
      "permission": {
        "bash": {
          "*": "deny",
          "find *": "allow",
          "git status": "allow",
          "git log *": "allow",
          "ls *": "allow"
        }
      }
    }
  }
}
